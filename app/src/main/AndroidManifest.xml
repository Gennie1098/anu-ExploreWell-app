<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">

        <!-- StartScreen is the launcher activity; it's the entry point of the app. -->
         <activity
         android:name=".StartScreen"
         android:label="Start"
         android:exported="true">
         <intent-filter>
         <action android:name="android.intent.action.MAIN"/>
         <category android:name="android.intent.category.LAUNCHER"/>
         </intent-filter>
         </activity>
<!--        <activity-->
<!--            android:name=".MainActivity"-->
<!--            android:exported="true"-->
<!--            android:label="Home">-->
<!--            <intent-filter>-->
<!--                <action android:name="android.intent.action.MAIN" />-->

<!--                <category android:name="android.intent.category.LAUNCHER" />-->
<!--            </intent-filter>-->
<!--        </activity> -->

        <!-- LoginActivity is where users log in. -->
        <activity
            android:name=".ui.login.LoginActivity"
            android:exported="false"
            android:label="Login"
            android:parentActivityName=".StartScreen"> <!-- Set to false if not intended to be accessed directly from outside the app. -->
        </activity>

         <!-- Main Activity  is the main activity after login. -->
         <activity
         android:name=".MainActivity"
         android:label="Home"
         android:exported="true">  <!-- Set to true to potentially allow navigation from other apps or components. -->
         </activity>
        <activity
            android:name=".AddNewPostActivity"
            android:exported="false"
            android:label="New post"
            android:parentActivityName=".MainActivity">
        </activity>

        <activity
            android:name=".PostNavigation"
            android:exported="false"
            android:label="@string/title_activity_post_navigation"
            android:theme="@style/AppTheme" />
        <activity
            android:name=".ui.post.SinglePostActivity"
            android:exported="false" />

    </application>

</manifest>